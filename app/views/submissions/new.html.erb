<div class="w-screen flex justify-center bg-gray-100">
  <div class="w-full mx-auto py-16">
    <!-- Title -->
    <h1 class="text-3xl text-center font-bold mb-6">
      Start buy selecting form
    </h1>
    <script type="text/javascript">
      $(document).on('load turbolinks:load', function () {
        $('.type-submit').on('click', function(event){
          event.preventDefault();
          type = $(this).data("type");
          $("#submission_type").val(type);
          form = document.querySelector('#set-form');
          form.dispatchEvent(new Event('submit', {bubbles: true}));
        });
        var options = {
          data: ["John", "Paul", "George", "Ringo"]
        };
        $('*[data-behavior="autocomplete"]').easyAutocomplete(options);
      });
    </script>
    <!-- End Title -->

    <!-- Default -->
    <div class="bg-white px-6 py-4 my-3 w-3/4 mx-auto shadow rounded-md flex items-center">
        <div class="w-full text-center mx-auto">
              <a href="#" data-type="cpp" class="type-submit border border-indigo-500 bg-indigo-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-indigo-600 focus:outline-none focus:shadow-outline">
                General liability
              </a>
              <a href="#" data-type="gl" class="type-submit border border-green-500 bg-green-500 text-white rounded-md px-4 py-2 m-2 transition duration-500 ease select-none hover:bg-green-600 focus:outline-none focus:shadow-outline">
                In-Land Marine
              </a>

              <%= form_with url: form_type_path, id: "set-form", local: false do |form| %>
               <%= form.hidden_field :submission_type, value: ""  %>
              <% end %>
        </div>
    </div>

    <div class="from-result form_holder" style="background-color: teal; ">

    </div>
    <!-- End Default -->
  </div>
</div>
